<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{motto2}}</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view class="audio_wrap" >
    <audio class="myAudio" poster="{{poster1}}" name="{{name1}}" author="{{author1}}" src="{{src1}}" id="myAudio1" controls loop></audio>


    <audio class="myAudio" poster="{{poster2}}" name="{{name2}}" author="{{author2}}" src="{{src2}}" id="myAudio2" controls loop></audio>


  </view>
  <button type="warn" class="btn1" bindtap="playMusic"> 童话镇.mp3 </button>
</view>
